{
  "appId": "com.herotools.openwispr",
  "productName": "OpenWayl",
  "directories": {
    "output": "dist"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": false,
  "files": [
    "main.js",
    "preload.js",
    "package.json",
    "node_modules/**/*",
    "src/dist/**/*",
    "src/helpers/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils.js",
    "src/utils/**/*",
    "src/updater.js",
    "src/components.json",
    "extensions/**/*",
    "!node_modules/.cache/**/*",
    "!src/node_modules/**/*"
  ],
  "asarUnpack": [
    "**/node_modules/ffmpeg-static/**/*",
    "**/node_modules/better-sqlite3/**/*"
  ],
  "extraResources": [
    "src/assets/**/*",
    "resources/macos-globe-listener.swift",
    "resources/bin/macos-globe-listener",
    {
      "from": "resources/bin/",
      "to": "bin/",
      "filter": ["whisper-cpp-*"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "src/assets/icon.icns",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "resources/mac/entitlements.mac.plist",
    "entitlementsInherit": "resources/mac/entitlements.mac.plist",
    "identity": "HeroTools Inc. (9R85XFMH59)",
    "extendInfo": {
      "LSUIElement": false,
      "NSMicrophoneUsageDescription": "OpenWhispr needs microphone access for speech-to-text transcription.",
      "NSAccessibilityUsageDescription": "OpenWhispr needs accessibility permissions to paste transcribed text into other applications."
    }
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "src/assets/icon.ico",
    "extraResources": [
      {
        "from": "resources/bin/nircmd.exe",
        "to": "bin/nircmd.exe"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm", "tar.gz"],
    "category": "Office",
    "maintainer": "OpenWayl Team <support@openwhispr.com>",
    "synopsis": "Desktop dictation app optimized for Wayland",
    "description": "A desktop dictation application optimized for Linux Wayland, based on OpenWhispr.",
    "icon": "assets/icon.png"
  },
  "flatpak": {
    "runtime": "org.freedesktop.Platform",
    "runtimeVersion": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "useWaylandFlags": true,
    "finishArgs": [
      "--socket=wayland",
      "--socket=fallback-x11",
      "--share=network",
      "--share=ipc",
      "--device=dri",
      "--socket=pulseaudio",
      "--filesystem=home",
      "--filesystem=xdg-documents",
      "--filesystem=xdg-download",
      "--talk-name=org.freedesktop.Notifications",
      "--talk-name=org.freedesktop.portal.Desktop"
    ]
  },
  "deb": {
    "afterRemove": "resources/linux/after-remove.sh",
    "fpm": ["--deb-recommends", "xdotool", "--deb-recommends", "wtype"]
  },
  "rpm": {
    "fpm": ["--rpm-tag", "Recommends: xdotool", "--rpm-tag", "Recommends: wtype"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "include": "resources/nsis/cleanup-models.nsh"
  },
  "dmg": {
    "title": "OpenWayl",
    "icon": "src/assets/icon.icns",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "publish": {
    "provider": "github",
    "owner": "HeroTools",
    "repo": "open-whispr",
    "private": false,
    "releaseType": "draft"
  }
}
